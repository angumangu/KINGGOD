pipeline{
    agent any
    stages{
        stage("git checkout"){
            steps{
                git branch: 'main', url: 'https://github.com/mrakbg/KINGGOD.git'
            }
        }
        stage("Docker remove image"){
            steps{
                script{
                    sh"docker rmi -f mrakbg/3tierscratch:latest || true"
                    sh"docker build -t mrakbg/3tierscratch:latest ."
                    sh"docker stop anuj || true"
                    sh"docker rm anuj || true"
                    sh"docker run -d --name anuj -p 3000:3000 mrakbg/3tierscratch:latest"
                }

            }
        }
    }
    
}